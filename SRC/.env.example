# Tienda de Barrio Pro - Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================
# SUPABASE CONFIGURATION
# =============================================

# Enable/Disable Supabase integration
# Set to 'true' to use Supabase, 'false' for localStorage fallback
VITE_SUPABASE_ENABLED=false

# Your Supabase project URL (from Project Settings > API)
VITE_SUPABASE_URL=

# Your Supabase Anon/Public Key (from Project Settings > API)
VITE_SUPABASE_ANON_KEY=

# =============================================
# OPTIONAL: FEATURE FLAGS
# =============================================

# Enable debug logging
VITE_DEBUG_MODE=false

# Enable offline mode simulation (for testing)
VITE_SIMULATE_OFFLINE=false
